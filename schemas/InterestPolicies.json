{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "interest_calc_time": {
      "type": "string",
      "description": "Defaults to EST 1AM. Interest for this policy is calculated at this time every X interval.",
      "format": "time",
      "example": "11:21:04-08:00",
      "pattern": "/^(([0-1][0-9])|(2[0-3])):[0-5][0-9]:[0-5][0-9]([-+](([0-1][0-9])|(2[0-3])):[0-5][0-9])?$/g",
      "default": "01:00:00-05:00"
    }
  },
  "description": "The Interest Policy Object"
}
