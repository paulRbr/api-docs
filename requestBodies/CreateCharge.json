{
  "description": "Body of request to create charge",
  "required": true,
  "content": {
    "application/json": {
      "schema": {
        "type": "object",
        "additionalProperties": false,
        "required": ["original_amount_cents", "merchant_data"],
        "properties": {
          "original_amount_cents": {
            "type": "integer",
            "description": "The Integer Amount of the Charge in Cents",
            "example": 200,
            "default": 0
          },
          "effective_at": {
            "type": "string",
            "description": "The `Date-Time` that the charge should be recorded to the account. Although the charge is being added to Canopy today, it can actually be effective as of 10 days ago.",
            "format": "date-time",
            "example": "2020-07-20T09:11:28+00:00"
          },
          "merchant_data": {
            "type": "object",
            "description": "",
            "required": ["mcc_code"],
            "properties": {
              "name": {
                "type": "string"
              },
              "id": {
                "type": "string"
              },
              "mcc_code": {
                "type": "number"
              },
              "phone_number": {
                "type": "string"
              }
            }
          },
          "issuer_processor_metadata": {
            "type": "object",
            "properties": {
              "privacy": {
                "type": "object",
                "properties": {
                  "last_four": {
                    "type": "integer",
                    "description": "Last four digits of the card against which the spend was made."
                  }
                }
              }
            }
          },
          "external_fields": {
            "type": "array",
            "maxItems": 10,
            "description": "An array of static references to fields in a third party system.",
            "items": {
              "type": "object",
              "properties": {
                "key": {
                  "type": "string",
                  "description": "Key - i.e. Name of the External Party",
                  "example": "Globex Card Processing Account ID"
                },
                "value": {
                  "type": "string",
                  "description": "Value - i.e. External Account ID",
                  "example": "22445702-a389-431f-927d-07b8d0750787"
                }
              }
            }
          }
        }
      }
    }
  }
}
