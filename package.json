{
  "name": "canopy-docs",
  "description": "OpenAPI v3.0.3 Spec for CanopyAPI",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:canopy1/api-docs.git"
  },
  "author": "CanopyServicing",
  "license": "ISC",
  "scripts": {
    "bundle": "rm -rf dist/* && swagger-cli bundle -r -o dist/consolidated.json openapi.json",
    "validate": "swagger-cli validate dist/consolidated.json",
    "flight-check": "yarn bundle && yarn validate",
    "preview": "bundle exec bump preview dist/consolidated.json",
    "postman": "openapi2postmanv2 -s dist/consolidated.json -o Canopy_UAT_Postman_2.json -p -O folderStrategy=Tags includeAuthInfoInExample=false requestParametersResolution=Example"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "yarn flight-check",
      "pretty-quick"
    ]
  },
  "dependencies": {
    "swagger-cli": "4.0.4"
  },
  "devDependencies": {
    "husky": "4.3.5",
    "lint-staged": "10.5.3",
    "openapi-to-postmanv2": "2.0.0",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0"
  }
}
